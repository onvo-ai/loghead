{
  "manifest_version": 3,
  "name": "Loggerhead Collector",
  "version": "1.0",
  "description": "Collects browser console logs and sends them to Loggerhead.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:4567/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
